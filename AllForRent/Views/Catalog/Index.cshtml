@model IEnumerable<ProductCard>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-2">
            @foreach (var card in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@card.Image" width="100%" height="200" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-title">@card.Name</p>
                            <p class="card-text">@card.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="catalog" asp-action="detail" asp-route-id="@card.Id" type="button" class="btn btn-sm btn-outline-secondary">Подробнее</a>
                                    <a asp-controller="account" asp-action="edit" asp-route-id="@card.Id" type="button" class="btn btn-sm btn-outline-secondary">Редактировать</a>
                                </div>
                                <small class="text-muted">@card.Price ₽</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>