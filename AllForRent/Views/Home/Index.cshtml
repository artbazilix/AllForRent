@using AllForRent.ViewModels
@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5 text-center container">
<div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Всё в аренду</h1>
        <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
        <p>
            <a href="#" class="btn btn-primary my-2">Взять в аренду</a>
            <a href="#" class="btn btn-secondary my-2">Стать продавцом</a>
        </p>
    </div>
</div>
</section>

<section>
    <div class="container">
        @if (Model.ProductCards == null)
        {
            <h1 class="fw-light">
                В вашем регионе нет объявлений, <a asp-area="" asp-controller="Account"
                                                            asp-action="Login">войдите</a> и создайте своё
            </h1>
        }
        else
        {
            <div class="row justify-content-between mb-5">
                <div class="col-auto">
                    <h3>Предложения в городе @Model.City</h3>
                </div>
                <div class="col-auto">
                    <a href="#" class="btn btn-outline-primary">View all</a>
                </div>
            </div>
            <ul class="row feature-list feature-list-sm">
                @foreach (var item in Model.ProductCards)
                {
                    <li class="col-12 col-md-6 col-lg-4">
                        <div class="card">
                            <a href="#">
                                <img class="card-img-top" src="@item.Image.First" alt="Card image cap">
                            </a>
                            <div class="card-body">
                                <a href="#">
                                    <h4 class="card-title">@item.HeadTitle</h4>
                                    <p class="card-text text-body">@item.Description</p>
                                </a>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
    </div>
</section>